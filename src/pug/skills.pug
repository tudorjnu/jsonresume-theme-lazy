if helper.isValidArray(resume.skills)
  div.section-container
    div.section-header
      h2 Skills
      hr
    div.margin-container-xs
      each skill in resume.skills
        div.skill
          p
            strong
              = skill.name
              if skill.level
                = ' (' + skill.level + ')'
              = ': '
            if helper.isValidArray(skill.keywords)
              = skill.keywords.join(", ")
