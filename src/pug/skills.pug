if helper.validArray(resume.skills)
  div(class='section-container')
    div(class='section-title')
      h3.name Skills
      hr
    each skill in resume.skills
      div(class='skill')
        p
          strong
            = skill.name
            if skill.level
              = ' (' + skill.level + ')'
            = ': '
          if helper.validArray(skill.keywords)
            = skill.keywords.join(", ")
